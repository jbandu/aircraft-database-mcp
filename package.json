{
  "name": "aircraft-database-mcp",
  "version": "1.0.0",
  "description": "Aircraft Database MCP Server - Canonical source of truth for airline fleet data",
  "main": "dist/mcp-server/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/mcp-server/index.ts",
    "dev:mcp": "tsx src/mcp-server/index.ts",
    "dev:api": "tsx watch src/api/server.ts",
    "build": "tsc",
    "start": "node dist/mcp-server/index.js",
    "start:api": "node dist/api/server.js",
    "test": "tsx scripts/test-mcp-tools.ts",
    "test:data": "tsx scripts/test-data-generator.ts",
    "test:data:clean": "tsx scripts/test-data-generator.ts --clean",
    "test:data:stats": "tsx scripts/test-data-generator.ts --stats",
    "db:migrate": "tsx scripts/db-migrate.ts",
    "db:seed": "tsx scripts/seed-top-100-airlines.ts",
    "db:reset": "tsx scripts/db-reset.ts",
    "neo4j:init": "tsx scripts/neo4j-init.ts",
    "neo4j:sync": "tsx src/database/neo4j/sync-from-postgres.ts",
    "neo4j:sync:full": "tsx src/database/neo4j/sync-from-postgres.ts --full",
    "neo4j:sync:dry-run": "tsx src/database/neo4j/sync-from-postgres.ts --dry-run",
    "neo4j:clear": "tsx src/database/neo4j/sync-from-postgres.ts --clear",
    "scraper:run": "tsx src/scrapers/workflows/airline-scraper-workflow.ts",
    "scraper:schedule": "tsx src/scrapers/workflows/scheduler.ts",
    "scraper:setup": "tsx scripts/schedule-top-100-airlines.ts",
    "scraper:monitor": "tsx src/scrapers/monitoring/dashboard.ts",
    "scraper:monitor:watch": "tsx src/scrapers/monitoring/dashboard.ts --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "aircraft",
    "airline",
    "fleet",
    "aviation",
    "database"
  ],
  "author": "Number Labs",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "neo4j-driver": "^5.27.0",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "playwright": "^1.49.1",
    "postgres": "^3.4.5",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.17.0",
    "yaml": "^2.3.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.11.10",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
