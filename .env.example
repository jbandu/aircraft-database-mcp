# =============================================================================
# AIRCRAFT DATABASE MCP SERVER - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL Database (Main relational database)
# For development: Use local PostgreSQL or Neon free tier
# For production: Use Neon or Railway PostgreSQL
POSTGRES_URL=postgresql://user:password@localhost:5432/aircraft_db
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aircraft_db
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_SSL=false

# Neo4j Graph Database (Fleet relationships & lineage)
# For development: Use local Neo4j or Neo4j Aura free tier
# For production: Use Neo4j Aura or self-hosted
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# -----------------------------------------------------------------------------
# LLM Services Configuration
# -----------------------------------------------------------------------------

# Ollama (Local LLM for development)
# Install: https://ollama.ai
# Recommended models: llama3.2, mistral, qwen2.5
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Claude API (Production LLM for web scraping & data extraction)
# Get API key: https://console.anthropic.com
CLAUDE_API_KEY=sk-ant-api03-your-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# LLM Mode Selection
# Options: "ollama" (local dev) | "claude" (production)
LLM_MODE=ollama

# -----------------------------------------------------------------------------
# MCP Server Configuration
# -----------------------------------------------------------------------------

MCP_SERVER_NAME=aircraft-database
MCP_SERVER_VERSION=1.0.0
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# MCP Transport Mode
# Options: "stdio" (standard MCP) | "http" (for testing/debugging)
MCP_TRANSPORT_MODE=stdio

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs/mcp-server.log

# -----------------------------------------------------------------------------
# Web Scraping Configuration
# -----------------------------------------------------------------------------

# Scraper Settings
SCRAPER_USER_AGENT=Mozilla/5.0 (compatible; NumberLabs-AircraftBot/1.0; +https://numberlabs.ai)
SCRAPER_RATE_LIMIT_MS=2000
SCRAPER_TIMEOUT_MS=30000
SCRAPER_MAX_RETRIES=3
SCRAPER_CONCURRENT_LIMIT=5

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER=chromium

# Scraper Scheduling
# Cron format: "0 2 * * *" = Daily at 2 AM
SCRAPER_SCHEDULE_ENABLED=true
SCRAPER_SCHEDULE_CRON=0 2 * * *

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------

# Sentry Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Metrics & Monitoring
METRICS_ENABLED=false
METRICS_PORT=9090

# -----------------------------------------------------------------------------
# Airline Data Sources
# -----------------------------------------------------------------------------

# Priority airlines to scrape first (comma-separated IATA codes)
PRIORITY_AIRLINES=AA,DL,UA,WN,AS,B6

# Data refresh intervals (hours)
FLEET_DATA_REFRESH_INTERVAL=24
AIRCRAFT_DETAILS_REFRESH_INTERVAL=168

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

ENABLE_NEO4J=true
ENABLE_AUTO_SCRAPING=true
ENABLE_API_SERVER=false
ENABLE_CACHE=true

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------

NODE_ENV=development
DEBUG=aircraft-mcp:*
